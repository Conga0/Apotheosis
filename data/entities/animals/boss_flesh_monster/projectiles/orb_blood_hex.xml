<Entity 
  name="$projectile_default" 
   >
	
	<HomingComponent
		target_tag="player_unit"
		homing_targeting_coeff="7"
		detect_distance="350"
		homing_velocity_multiplier="1.0"
		>
	</HomingComponent>

	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
    		gravity_y="0"
			air_friction="0"
			mass="0.06"
			>
    	</VelocityComponent> 
	</Base>

	<ProjectileComponent 
		_enabled="1" 
		speed_min="140"
		speed_max="165"
		on_death_explode="1"
		on_death_gfx_leave_sprite="0" 
		on_lifetime_out_explode="1"
		on_collision_die="1"
		damage="1.0"
		lifetime="180"
		shoot_light_flash_r="40"
		shoot_light_flash_g="120"
		shoot_light_flash_b="20"
		shoot_light_flash_radius="72"
		knockback_force="1.5"
		>
        <config_explosion
            never_cache="1" 
            camera_shake="0.3" 
            explosion_radius="4"
            explosion_sprite="data/particles/explosion_032.xml"
            explosion_sprite_lifetime="0" 
            create_cell_probability="0" 
            hole_destroy_liquid="0" 
            hole_enabled="1" 
            ray_energy="50000"
            damage="0.0"
            hole_image="data/temp/explosion_hole.png" 
            particle_effect="0 " 
            damage_mortals="1" 
            physics_explosion_power.min="0.3"
            physics_explosion_power.max="0.5" 
            physics_throw_enabled="1" 
            shake_vegetation="1" 
            sparks_count_max="20" 
            sparks_count_min="7" 
            sparks_enabled="0" 
            light_enabled="0" 
            stains_enabled="1"
            stains_radius="1"
			>
        </config_explosion>
    </ProjectileComponent>
  
	<SpriteComponent 
		_enabled="1" 
		alpha="1" 
		image_file="mods/apotheosis/files/projectiles_gfx/orb_red.xml" 
		next_rect_animation="" 
		offset_x="5" 
		offset_y="5" 
		rect_animation="fireball" 
		emissive="1"
		additive="1"
		
		update_transform_rotation="0"
		>
	</SpriteComponent>
  
  	<!-- dense emitter -->
	<ParticleEmitterComponent
		emitted_material_name="spark_red"
		offset.x="0"
		offset.y="0"
		x_pos_offset_min="-2"
		x_pos_offset_max="2"
		y_pos_offset_min="-2"
		y_pos_offset_max="2"
		x_vel_min="0"
		x_vel_max="0"
		y_vel_min="0"
		y_vel_max="0"
		gravity.y="0.0"
		count_min="8"
		count_max="11"
		lifetime_min="0.1"
		lifetime_max="0.2"
		is_trail="1"
		trail_gap="0.2"
		render_on_grid="1"
		fade_based_on_lifetime="1"
		airflow_force="10.5"
		airflow_time="1.401"
		airflow_scale="0.05"
		emission_interval_min_frames="1"
		emission_interval_max_frames="1"
		emit_cosmetic_particles="1"
		create_real_particles="0"
		render_ultrabright="0"
		is_emitting="1" >
	</ParticleEmitterComponent>
	
  	<!-- sparse emitter -->
	<ParticleEmitterComponent
		emitted_material_name="spark_red"
		offset.x="0"
		offset.y="0"
		x_pos_offset_min="0"
		x_pos_offset_max="0"
		y_pos_offset_min="0"
		y_pos_offset_max="0"
		x_vel_min="20"
		x_vel_max="40"
		y_vel_min="0"
		y_vel_max="0"
		gravity.y="0.0"
		count_min="1"
		count_max="2"
		lifetime_min="0.6"
		lifetime_max="0.8"
		is_trail="0"
		trail_gap="8.0"
		render_on_grid="1"
		fade_based_on_lifetime="1"
		airflow_force="1.5"
		airflow_time="0.401"
		airflow_scale="0.05"
		emission_interval_min_frames="1"
		emission_interval_max_frames="10"
		emit_cosmetic_particles="1"
		create_real_particles="0"
		render_ultrabright="0"
		is_emitting="1" >
	</ParticleEmitterComponent>
	
  	<!-- very sparse emitter -->
	<ParticleEmitterComponent
		emitted_material_name="spark_red"
		offset.x="0"
		offset.y="0"
		x_pos_offset_min="0"
		x_pos_offset_max="0"
		y_pos_offset_min="0"
		y_pos_offset_max="0"
		x_vel_min="10"
		x_vel_max="20"
		y_vel_min="0"
		y_vel_max="0"
		gravity.y="0.0"
		count_min="1"
		count_max="1"
		lifetime_min="1.4"
		lifetime_max="1.5"
		is_trail="0"
		trail_gap="8.0"
		render_on_grid="1"
		fade_based_on_lifetime="1"
		airflow_force="0.5"
		airflow_time="0.5"
		airflow_scale="0.05"
		emission_interval_min_frames="10"
		emission_interval_max_frames="20"
		emit_cosmetic_particles="1"
		create_real_particles="0"
		render_ultrabright="0"
		is_emitting="1" >
	</ParticleEmitterComponent>
  
	<AudioComponent
		file="data/audio/Desktop/projectiles.bank"
		event_root="projectiles/orb_poly" >
	</AudioComponent>
	
	<AudioLoopComponent
		file="data/audio/Desktop/projectiles.bank"
		event_name="projectiles/magic_orb/loop"
		auto_play="1">
	</AudioLoopComponent>
  
	<VariableStorageComponent
		name="projectile_file"
		value_string="data/entities/animals/boss_flesh_monster/projectiles/orb_blood_hex.xml"
		>
	</VariableStorageComponent>
	
	<HitEffectComponent 
        effect_hit="LOAD_UNIQUE_CHILD_ENTITY"
        value_string="mods/Apotheosis/files/entities/misc/effect_hex_blood.xml" >
	</HitEffectComponent >

</Entity>

