  <SpriteComponent 
    _enabled="1" 
    alpha="1" 
    image_file="mods/Apotheosis/files/projectiles_gfx/laser_purple.xml" 
    next_rect_animation="" 
    offset_x="2" 
    offset_y="2" 
    rect_animation="" 
