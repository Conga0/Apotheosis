<Entity tags="enemy,mortal,hittable,homing_target,teleportable_NOT,music_energy_100,lukki,glue_NOT,ui_use_raw_name" name="Nopealukki">	
	<ItemChestComponent level="4" enemy_drop="1" > </ItemChestComponent>
	
	<!-- Fixes some weird stuff which comes from not having an AnimalAIComp -->
	<AnimalAIComponent/>

	<LuaComponent
	    execute_every_n_frame="-1"
	    script_death="data/scripts/items/drop_money.lua"
	    remove_after_executed="1" >
	</LuaComponent>

	<!-- art - main body -->

	<LightComponent 
		_enabled="1" 
		radius="32"
		r="120"
		g="60"
		b="10"
		offset_y="0"
   		fade_out_time="1.5" >
	</LightComponent>

	<SpriteComponent 
		image_file="mods/Apotheosis/files/enemies_gfx/lukki/lukki_swarmling.xml"
		offset_x="0"
		offset_y="0"
		>
	</SpriteComponent>

	<SpriteComponent 
		image_file="mods/Apotheosis/files/enemies_gfx/lukki/lukki_swarmling_emissive.xml"
		emissive="1"
		additive="1"
		offset_x="0"
		offset_y="0"
		>
	</SpriteComponent>

	<!-- AI  -->

	<LimbBossComponent
		state="1">
	</LimbBossComponent>

	<PathFindingComponent 
		can_dive="1" 
		can_fly="1" 
		can_jump="0" 
		can_swim_on_surface="1" 
		can_walk="1" 
		cost_of_flying="500" 
		distance_to_reach_node_x="20" 
		distance_to_reach_node_y="20" 
		frames_between_searches="20" 
		frames_to_get_stuck="120" 
		initial_jump_lob="1" 
		initial_jump_max_distance_x="100" 
		initial_jump_max_distance_y="60" 
		iterations_max_no_goal="9999999" 
		iterations_max_with_goal="145000" 
		jump_speed="200" 
		max_jump_distance_from_camera="400" 
		search_depth_max_no_goal="120" 
		search_depth_max_with_goal="145000" 
		y_walking_compensation="8" >
	</PathFindingComponent>

	<PathFindingGridMarkerComponent 
		_enabled="1" 
		marker_offset_x="0" 
		marker_offset_y="-6" 
		marker_work_flag="16" >
	</PathFindingGridMarkerComponent>


	<!-- physics  -->

	<PhysicsAIComponent
		target_vec_max_len="300.0"
		force_coeff="75.0"
		force_balancing_coeff="0.4"
		force_max="550"
		torque_coeff="10"
		torque_balancing_coeff="2"
		torque_max="130.0"
		damage_deactivation_probability="0"
		damage_deactivation_time_min="2"
		damage_deactivation_time_max="10" >
	</PhysicsAIComponent>

	<PhysicsBodyComponent 
		force_add_update_areas="1"
		allow_sleep="1" 
		angular_damping="0.02" 
		fixed_rotation="1" 
		is_bullet="0" 
		linear_damping="0"  >
	</PhysicsBodyComponent>

	<PhysicsShapeComponent
		is_circle="1"
		radius_x="4"
		radius_y="4"
		friction="0.0"
		restitution="0.3" >
	</PhysicsShapeComponent>
	
	<CellEaterComponent
		radius="7" 
		eat_probability="100">
	</CellEaterComponent>


	<!-- damage  -->

	<DamageModelComponent 
		hp="2.5" 
		air_needed="0" 
		falling_damages="0" 
		fire_damage_amount="0.2" 
		fire_probability_of_ignition="0.5" 
		blood_material="slime"
		blood_spray_material="slime"
		is_on_fire="0" 
		materials_damage="0"
		materials_how_much_damage="0.1" 
		materials_that_damage="acid" 
		ragdoll_filenames_file=""
        ragdoll_material="meat_slime"
		ragdoll_offset_y="-6"
		ragdollify_child_entity_sprites="1"
		blood_sprite_directional="data/particles/bloodsplatters/bloodsplatter_directional_purple_$[1-3].xml"
		blood_sprite_large="data/particles/bloodsplatters/bloodsplatter_purple_$[1-3].xml"
		>
		<damage_multipliers
			melee="2.0"
			projectile="0.3"
			explosion="0.8"
			electricity="0.6"
			fire="1.2"
			slice="2.0"
			ice="1.2"
			>
		</damage_multipliers>
	</DamageModelComponent>

	<GenomeDataComponent 
			herd_id="slimes" >
	</GenomeDataComponent>

	<!-- center hitbox (weak spot) -->
	<HitboxComponent 
		_tags="hitbox_weak_spot"
		aabb_min_x="-6" 
		aabb_max_x="6" 
		aabb_min_y="-6" 
		aabb_max_y="6"
		damage_multiplier="1.0" >
	</HitboxComponent>


	<!-- etc -->

	<AudioComponent 
		file="data/audio/Desktop/animals.bank"
		event_root="animals" >
	</AudioComponent>

	<AudioComponent 
		file="data/audio/Desktop/animals.bank"
		event_root="animals/lukki_tiny" >
	</AudioComponent>

	<SpriteAnimatorComponent 
		rotate_to_surface_normal="0" 
		target_sprite_comp_name="character" >
	</SpriteAnimatorComponent>

