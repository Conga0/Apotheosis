<Entity 
  name="$projectile_default" 
   >

	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
			air_friction="0.1"
			mass="0.02"
			gravity_y="0" 
			liquid_drag="0"
			>
    	</VelocityComponent> 
	</Base>

  <ProjectileComponent 
    _enabled="1" 
	lob_min="0.8"
	lob_max="1.0"
  speed_min="450"
  speed_max="450"
	friction="0.0"
	direction_random_rad="0.2"
    on_death_explode="0"
    on_death_gfx_leave_sprite="0" 
    on_lifetime_out_explode="0"
    explosion_dont_damage_shooter="1" 
    die_on_low_velocity="1"
    on_collision_die="0"
    lifetime="50"
	damage="0"
	velocity_sets_scale="0"
	lifetime_randomness="7"
	ragdoll_force_multiplier="0.01"
	hit_particle_force_multiplier="0.25 "
	camera_shake_when_shot="0.0" >
  </ProjectileComponent>
  
  <ParticleEmitterComponent 
    emitted_material_name="water_fading"
    count_min="7"
    count_max="15"
    offset.x="0"
    offset.y="1"
    x_pos_offset_min="-4"
    y_pos_offset_min="-4"
    x_pos_offset_max="4"
    y_pos_offset_max="4"
    x_vel_min="-10"
    x_vel_max="10"
    y_vel_min="-10"
    y_vel_max="10"
    count_min="2"
    count_max="3"
    lifetime_min="1.1"
    lifetime_max="2.8"
    create_real_particles="1"
    emit_cosmetic_particles="0"
    emission_interval_min_frames="2"
    emission_interval_max_frames="3"
    is_emitting="1" >
  </ParticleEmitterComponent>
  
  <LightComponent 
    _enabled="1" 
    radius="150" 
    r="10"
    g="10"
    b="240">
  </LightComponent>

  <LuaComponent
      execute_every_n_frame="-1"
      execute_on_removed="1"
      script_source_file="mods/Apotheosis/files/scripts/projectiles/stain_water.lua"
  >
  </LuaComponent>

  <AudioComponent
      file="data/audio/Desktop/projectiles.bank"
      event_root="projectiles/acid">
  </AudioComponent>
  
	<VariableStorageComponent
		name="projectile_file"
		value_string="data/entities/animals/enchanted_books/projectiles/waterburst.xml"
		>
	</VariableStorageComponent>
  
</Entity>

