<Entity tags="teleportable_NOT,item">

	<!-- item -->

	<VelocityComponent
		_tags="enabled_in_world"
		gravity_y="400"
		air_friction="0.55"
		terminal_velocity="1000" >
	</VelocityComponent>
		
	<SimplePhysicsComponent
		_tags="enabled_in_world" >
	</SimplePhysicsComponent>
	
	<HitboxComponent 
		_tags="enabled_in_world"
		aabb_max_x="4" 
		aabb_max_y="4" 
		aabb_min_x="-4" 
		aabb_min_y="-4" 
		is_enemy="0" 
		is_item="0" 
		is_player="0" >
	</HitboxComponent>

	<SpriteComponent
    	_tags="enabled_in_world,enabled_in_hand" 
		_enabled="1"
		offset_x="4"
		offset_y="4"
		image_file="mods/apotheosis/files/items_gfx/stone_heretic.png"
		z_index="-1.5" 
	></SpriteComponent>

	<ItemComponent
		_tags="enabled_in_world"
		item_name="$item_apotheosis_stone_heretic_name"
		ui_description="$item_apotheosis_stone_heretic_desc"
		ui_sprite="mods/apotheosis/files/ui_gfx/items/stone_heretic.png"
		max_child_items="0"
		is_pickable="1"
		is_equipable_forced="1"
		preferred_inventory="QUICK"
	></ItemComponent>
	
	<AbilityComponent
		ui_name="$item_apotheosis_stone_heretic_name"
		throw_as_item="1"
		><gun_config
			deck_capacity="0"
		></gun_config>
	</AbilityComponent>

	<UIInfoComponent
		_tags="enabled_in_world"
		name="$item_apotheosis_stone_heretic_name">
	</UIInfoComponent>
  
	<LightComponent
		_tags="enabled_in_world"
		radius="64" >
	</LightComponent>
	
