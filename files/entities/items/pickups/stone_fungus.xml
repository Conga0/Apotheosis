    clean_stains="0"
    is_circle="1"
    radius="20" 
    reaction_audio_amount="0.005"
  >
  </MagicConvertMaterialComponent>
  
  <!-- item -->

  <SpriteComponent
    _tags="enabled_in_hand"
    _enabled="0"
    offset_x="4"
    offset_y="4"
    image_file="mods/Apotheosis/files/items_gfx/stone_fungus.png"
  ></SpriteComponent>

  <ItemComponent
    _tags="enabled_in_world"
    item_name="$item_apotheosis_fungus_stone_name"
    ui_description="$item_apotheosis_fungus_stone_desc"
    ui_sprite="mods/Apotheosis/files/ui_gfx/items/stone_fungus.png"
    max_child_items="0"
    is_pickable="1"
    is_equipable_forced="1"
