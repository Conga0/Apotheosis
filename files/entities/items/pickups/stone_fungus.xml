<Entity name="apotheosis_fungus_stone" tags="hittable,teleportable_NOT,item_physics,item_pickup,poopstone" >
  <Base file="data/entities/base_item_projectile.xml">
  </Base>

  <!-- physical presence -->
  
  <PhysicsBodyComponent 
    _tags="enabled_in_world"
    uid="1" 
    allow_sleep="1" 
    angular_damping="0" 
    fixed_rotation="0" 
    is_bullet="1" 
    linear_damping="0"
    auto_clean="0"
    on_death_leave_physics_body="1"
    hax_fix_going_through_ground="1"
  ></PhysicsBodyComponent>
  
  <PhysicsImageShapeComponent 
    body_id="1"
    centered="1"
    image_file="mods/Apotheosis/files/items_gfx/stone_fungus.png"
    material="rock_box2d_hard"
  ></PhysicsImageShapeComponent>
  
  <PhysicsThrowableComponent
    max_throw_speed="180"
    throw_force_coeff="1.5"
  ></PhysicsThrowableComponent>

  <VelocityComponent
    _tags="enabled_in_world"
  ></VelocityComponent>

  <!-- steaming -->

  <MagicConvertMaterialComponent
    _tags="enabled_in_hand,enabled_in_world"
    kill_when_finished="0"
    steps_per_frame="3"
    from_material_array="sand,sand_static,sandstone_surface,sand_petrify,sand_surface,sand_blue,blood,apotheosis_blood_infectious"
