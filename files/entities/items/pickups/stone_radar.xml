<Entity tags="hittable,teleportable_NOT,item_physics,item_pickup,seed_a" >
	<Base file="data/entities/base_item_projectile.xml" />

	<!-- physical presence -->
	
	<PhysicsBodyComponent 
		_tags="enabled_in_world"
		uid="1" 
		allow_sleep="1" 
		angular_damping="0" 
		fixed_rotation="0" 
		is_bullet="1" 
		linear_damping="0"
		auto_clean="0"
		on_death_leave_physics_body="1"
		hax_fix_going_through_ground="1"
	></PhysicsBodyComponent>
	
	<PhysicsImageShapeComponent 
		body_id="1"
		centered="1"
		image_file="mods/apotheosis/files/items_gfx/goldnugget_01_alt_radar.png"
		material="gem_box2d_white"
	></PhysicsImageShapeComponent>
	
	<PhysicsThrowableComponent
		max_throw_speed="180"
		throw_force_coeff="1.5"
	></PhysicsThrowableComponent>

	<VelocityComponent
		_tags="enabled_in_world"
	></VelocityComponent>

	<!-- particles -->

	<SpriteParticleEmitterComponent
		_tags="enabled_in_world,enabled_in_hand"
		sprite_file="data/particles/shine_blue.xml"
		delay="0"
		lifetime="20"
		color.r="1" color.g="1" color.b="1" color.a="1"
		color_change.r="0" color_change.g="0" color_change.b="0" color_change.a="-1"
		velocity.x="0" velocity.y="0"
		gravity.x="0" gravity.y="0"
		velocity_slowdown="0"
		rotation="0"
		angular_velocity="0"
		use_velocity_as_rotation="0"
		scale.x="1" scale.y="1"
		scale_velocity.x="0" scale_velocity.y="0"
		emission_interval_min_frames="1"
		emission_interval_max_frames="2"
		count_min="1" count_max="2"
		randomize_rotation.min="-3.1415"
		randomize_rotation.max="3.1415"
		randomize_angular_velocity.min="-15"
		randomize_angular_velocity.max="15"
		randomize_velocity.min_x="-9"
		randomize_velocity.max_x="9"
		randomize_velocity.min_y="-9"
		randomize_velocity.max_y="9"
		randomize_position.min_x="-8"
		randomize_position.max_x="8"
		randomize_position.min_y="-8"
		randomize_position.max_y="8"
		>
	</SpriteParticleEmitterComponent>
	
	<ParticleEmitterComponent 
		_tags="enabled_in_world,enabled_in_hand"
		emitted_material_name="spark_white"
		fade_based_on_lifetime="1"
		x_pos_offset_min="0"
		x_pos_offset_max="0"
		y_pos_offset_min="0"
		y_pos_offset_max="0"
		x_vel_min="-10"
		x_vel_max="10"
		y_vel_min="-10"
		y_vel_max="10"
		area_circle_radius.min="2"
		area_circle_radius.max="8"
		velocity_always_away_from_center="50"
		gravity.y="0"
		friction="0.1"
		airflow_force="0.9"
		airflow_time="0.101"
		airflow_scale="0.81"
		count_min="2"
		count_max="3"
		lifetime_min="0.1"
		lifetime_max="0.8"
		create_real_particles="0"
		emit_cosmetic_particles="1"
		draw_as_long="1"
		collide_with_grid="0"
		render_on_grid="1"
		emission_interval_min_frames="1"
		emission_interval_max_frames="1"
		attractor_force="16"
		render_ultrabright="1"
		is_emitting="1" >
	</ParticleEmitterComponent>

	<!-- item -->

	<SpriteComponent
		_tags="enabled_in_hand"
		_enabled="0"
		offset_x="4"
		offset_y="4"
		image_file="data/items_gfx/sunseed.png"
	></SpriteComponent>

	<ItemComponent
		_tags="enabled_in_world"
		item_name="$item_apotheosis_stone_radar_name"
		ui_description="$item_apotheosis_stone_radar_desc"
		ui_sprite="data/ui_gfx/items/sunseed.png"
		max_child_items="0"
		is_pickable="1"
		is_equipable_forced="1"
		preferred_inventory="QUICK"
	></ItemComponent>

	<UIInfoComponent
		_tags="enabled_in_world"
		name="$item_apotheosis_stone_radar_name">
	</UIInfoComponent>
	
	<AbilityComponent
		ui_name="$item_apotheosis_stone_radar_name"
		throw_as_item="1"
		><gun_config
			deck_capacity="0"
		></gun_config>
	</AbilityComponent>
	
	<CameraBoundComponent
	  max_count="5"
	  distance="2000">
	</CameraBoundComponent>
</Entity>
