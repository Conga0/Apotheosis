<Entity name="Seed Tinker Apotheosis" tags="teleportable_NOT,item">

	<!-- item -->

	<VelocityComponent
		_tags="enabled_in_world"
		gravity_y="400"
		air_friction="0.55"
		terminal_velocity="1000" >
	</VelocityComponent>
		
	<SimplePhysicsComponent
		_tags="enabled_in_world" >
	</SimplePhysicsComponent>
	
	<HitboxComponent
		_tags="enabled_in_world"
		aabb_max_x="4" 
		aabb_max_y="4" 
		aabb_min_x="-4" 
		aabb_min_y="-4" 
		is_enemy="0" 
		is_item="0" 
		is_player="0" >
	</HitboxComponent>

	<SpriteComponent
    	_tags="enabled_in_world,enabled_in_hand" 
		_enabled="1"
		offset_x="10"
		offset_y="38"
		image_file="mods/Apotheosis/files/items_gfx/seed_tinker.png"
		z_index="-1.5" 
		update_transform_rotation="0"
	></SpriteComponent>

	<SpriteParticleEmitterComponent
		_enabled="1"
		_tags="enabled_in_world"
		sprite_file="data/particles/ray.xml" 
		delay="0"
		lifetime="1.5"
		color.r="1" color.g="1" color.b="1" color.a="0.5"
		color_change.r="0" color_change.g="0" color_change.b="0" color_change.a="-0.5"
		velocity.x="0" velocity.y="0"
		gravity.x="0" gravity.y="0"
		velocity_slowdown="0"
		rotation="0"
		angular_velocity="0"
		scale.x="1" scale.y="0"
		scale_velocity.x="-0.2" scale_velocity.y="4"
		emission_interval_min_frames="3"
		emission_interval_max_frames="6"
		emissive="1"
		additive="1"
		count_min="1" count_max="1"
		use_velocity_as_rotation="1"
		randomize_position.min_x="-5"
		randomize_position.max_x="5"
		randomize_position.min_y="-5"
		randomize_position.max_y="5"
		randomize_velocity.min_x="-30"
		randomize_velocity.max_x="30"
		randomize_velocity.min_y="-30"
		randomize_velocity.max_y="30"
		velocity_always_away_from_center="1">
	</SpriteParticleEmitterComponent>

	<ItemComponent
		_tags="enabled_in_world"
		item_name="$item_apotheosis_seed_tinker_name"
		ui_description="$item_apotheosis_seed_tinker_desc"
		ui_sprite="mods/Apotheosis/files/items_gfx/seed_tinker.png"
		max_child_items="1"
		is_pickable="1"
		is_equipable_forced="1"
		preferred_inventory="QUICK"
		play_spinning_animation="0"
		play_hover_animation="1"
	></ItemComponent>
	
	<AbilityComponent
		ui_name="$item_apotheosis_seed_tinker_name"
		throw_as_item="1"
		><gun_config
			deck_capacity="0"
		></gun_config>
	</AbilityComponent>

	<UIInfoComponent
		_tags="enabled_in_world"
		name="$item_apotheosis_seed_tinker_name">
	</UIInfoComponent>
  
	<LightComponent
		_tags="enabled_in_world"
		radius="64" >
	</LightComponent>
	
	<MaterialSuckerComponent
		_enabled="1"
		_tags="enabled_in_world"
		num_cells_sucked_per_frame="200"
		randomized_position.min_x="-64"
		randomized_position.max_x="64"
		randomized_position.min_y="-64"
		randomized_position.max_y="64"
		suck_tag="[magic_liquid]"
		material_type="0"
		barrel_size="10000"
		>
	</MaterialSuckerComponent>
	
	<MaterialInventoryComponent
		_enabled="1"
		_tags="enabled_in_world"
		drop_as_item="0"
		on_death_spill="1"
		max_capacity="10000"
		>
	</MaterialInventoryComponent>
	
	<LuaComponent
		_enabled="1"
		_tags="enabled_in_world"
		script_source_file="mods/Apotheosis/files/scripts/items/seed_tinker.lua"
		execute_every_n_frame="10"
		>
	</LuaComponent>
	
	<VariableStorageComponent
		name="growth_state"
		value_int="0"
		>
	</VariableStorageComponent>

</Entity>
