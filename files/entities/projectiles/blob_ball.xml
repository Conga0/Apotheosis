<Entity name="$projectile_default">

	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
			air_friction="0.0"
			mass="0.06"
			>
		</VelocityComponent>
	</Base>

  <ProjectileComponent 
    lob_min="0.9"
    lob_max="1.0"
    speed_min="150"
    speed_max="180"
    friction="0.6"
    direction_random_rad="0.05"
    on_death_explode="1"
    on_death_gfx_leave_sprite="0" 
    on_lifetime_out_explode="1"
    explosion_dont_damage_shooter="0" 
    on_collision_die="1"
    lifetime="500"
    damage="1.3"
    velocity_sets_scale="1"
    lifetime_randomness="7"
    ragdoll_force_multiplier="0.04"
    hit_particle_force_multiplier="5.5 "
    bounces_left="4"
    camera_shake_when_shot="5.0"
    shoot_light_flash_radius="80"
	muzzle_flash_file="data/entities/particles/muzzle_flashes/muzzle_flash_launcher.xml"
	knockback_force="1.7"
	>
    <config_explosion
      never_cache="0" 
      camera_shake="10" 
      explosion_radius="25" 
      explosion_sprite="data/particles/explosion_040_poof_green.xml"
      explosion_sprite_emissive="1"
      explosion_sprite_additive="1"	
	  load_this_entity="mods/Apotheosis/files/entities/projectiles/blob_ball_explosion.xml"	  
      explosion_sprite_lifetime="0" 
      create_cell_probability="0" 
      create_cell_material="blood"
      hole_destroy_liquid="0" 
      hole_enabled="1" 
      hole_image="data/temp/explosion_hole.png" 
      particle_effect="1" 
      damage="0"
	  physics_explosion_power.min="0.6" 
      physics_explosion_power.max="1.0" 
      physics_throw_enabled="1" 
      shake_vegetation="1" 
      sparks_count_max="30" 
      sparks_count_min="15" 
      sparks_enabled="1"
	  spark_material="plasma_fading_green"
      stains_enabled="1" 
      stains_image="data/temp/explosion_stain.png" 
      max_durability_to_destroy="70010"
	  ray_energy="60000"
    audio_enabled="0">
    </config_explosion>
  </ProjectileComponent>

  <SpriteComponent 
    alpha="1" 
    image_file="mods/Apotheosis/files/projectiles_gfx/blob_ball.xml" 
    next_rect_animation="" 
    offset_x="0" 
    offset_y="0" 
    rect_animation="" 
    >
  </SpriteComponent>

  <SpriteComponent 
    alpha="1" 
    additive="1"
    emissive="1"
    image_file="mods/Apotheosis/files/projectiles_gfx/blob_ball_emissive.xml" 
    next_rect_animation="" 
    offset_x="0" 
    offset_y="0" 
    rect_animation="" 
    >
  </SpriteComponent>

 	 <ParticleEmitterComponent 
		emitted_material_name="slime_green"
		offset.x="0"
		offset.y="0"
		x_pos_offset_min="-6"
		y_pos_offset_min="-6"
		x_pos_offset_max="6"
		y_pos_offset_max="6"
		count_min="8"
		count_max="12"
    gravity.y="100"
		lifetime_min="0.6"
		lifetime_max="0.6"
    airflow_force="0.8"
    airflow_time="1.0"
    airflow_scale="0.1"
		is_trail="1"
		trail_gap="0.5"
		render_on_grid="1"
		fade_based_on_lifetime="1"
		create_real_particles="0"
		emit_cosmetic_particles="1"
		emission_interval_min_frames="1"
		emission_interval_max_frames="1"
		is_emitting="1" >
	</ParticleEmitterComponent>

  <LightComponent 
    radius="40" >
  </LightComponent>

  <GameAreaEffectComponent
      radius="16"
      collide_with_tag="hittable"
      frame_length="1"
  ></GameAreaEffectComponent>

  <AudioComponent
      file="data/audio/Desktop/projectiles.bank"
      event_root="projectiles/acid">
  </AudioComponent>

	<VariableStorageComponent
		name="projectile_file"
		value_string="mods/Apotheosis/files/entities/projectiles/blob_ball.xml"
		>
	</VariableStorageComponent>

</Entity>