			mass="0.065"
      displace_liquid="0"
			>
		</VelocityComponent>
	</Base>

  <ProjectileComponent 
    _enabled="1" 
    lob_min="0.9"
    lob_max="1.0"
    speed_min="250"
    speed_max="280"
    friction="0.6"
    direction_random_rad="0.05"
    on_death_explode="0"
    on_death_gfx_leave_sprite="0" 
    on_lifetime_out_explode="0"
    explosion_dont_damage_shooter="0" 
