<Entity name="$projectile_default" tags="projectile_player">

	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
			air_friction="-0.2"
			gravity_y="0" 
			mass="0.3"
			liquid_drag="0"
			>
		</VelocityComponent>
	</Base>

	<HomingComponent
		target_tag="prey"
		homing_targeting_coeff="0.001"
		detect_distance="50"
		homing_velocity_multiplier="0.5"
		just_rotate_towards_target="1"
		>
	</HomingComponent>

	<ProjectileComponent 
		_enabled="1" 
		lob_min="0.8"
		lob_max="1.0"
		speed_min="50"
		speed_max="60"
		collide_with_world="0"
		direction_random_rad="0.00"
		on_death_explode="0"
		on_death_gfx_leave_sprite="0" 
		on_lifetime_out_explode="0"
		explosion_dont_damage_shooter="1" 
		on_collision_die="0"
		lifetime="600"
		damage="0"
    	damage_every_x_frames="10"
		knockback_force="0.1"
		velocity_sets_scale="0"
		penetrate_entities="1"
		lifetime_randomness="0"
		velocity_sets_rotation="0"
		ragdoll_force_multiplier="0.0025"
		hit_particle_force_multiplier="0.25"
		camera_shake_when_shot="0.4"
		muzzle_flash_file="data/entities/particles/muzzle_flashes/muzzle_flash_small_pink.xml"
		collide_with_shooter_frames="0"
		collide_with_entities="0"
		friendly_fire="0"
		shoot_light_flash_radius="100"
		shoot_light_flash_r="255"
		shoot_light_flash_g="255"
		shoot_light_flash_b="255"
		>
		<config_explosion
			never_cache="1" 
			damage="0"
			camera_shake="3.5" 
			explosion_radius="18" 
			explosion_sprite="data/particles/explosion_040_poof_green.xml" 
			explosion_sprite_lifetime="0" 
			create_cell_material="acid"
			create_cell_probability="100"  
			hole_destroy_liquid="0" 
			hole_enabled="1" 
			hole_image="data/temp/explosion_hole.png" 
			particle_effect="0" 
			damage_mortals="1" 
			physics_explosion_power.min="0.3"
			physics_explosion_power.max="0.4"
			physics_throw_enabled="1" 
			shake_vegetation="1" 
			sparks_count_max="20" 
			sparks_count_min="7" 
			sparks_enabled="0" 
			stains_enabled="1" 
			stains_radius="9"
			audio_enabled="0"
			spark_material="spark_white"
			>
		</config_explosion>
	</ProjectileComponent>

	<GameAreaEffectComponent
		radius="18"
		collide_with_tag="hittable"
		frame_length="1"
	></GameAreaEffectComponent>

	<LightComponent 
	    _enabled="1" 
	    radius="64" 
		r="255"
		g="255"
		b="255"
		fade_out_time="1.5"
		>
    </LightComponent>

	<ParticleEmitterComponent 
		emitted_material_name="spark_white"
		gravity.y="0.0"
		lifetime_min="3"
		lifetime_max="4"
		x_vel_min="0"
		x_vel_max="0"
		y_vel_min="0"
		y_vel_max="0"
		count_min="1"
		count_max="1"
		render_on_grid="1"
		fade_based_on_lifetime="1"
		area_circle_radius.min="0"
		area_circle_radius.max="15"
		cosmetic_force_create="1"
		collide_with_grid="0"
		airflow_force="0.051"
		airflow_time="1.01"
		airflow_scale="0.03"
		emission_interval_min_frames="1"
		emission_interval_max_frames="1"
		emit_cosmetic_particles="1"
		velocity_always_away_from_center="3"
		render_ultrabright="1"
		render_back="1"
		is_emitting="1" >
	</ParticleEmitterComponent>
	
	<HitEffectComponent 
        effect_hit="LOAD_UNIQUE_CHILD_ENTITY"
        value_string="data/entities/animals/constellation_jellyfish/jellyfish_teleport_aggressive.xml" >
	</HitEffectComponent >
</Entity>

