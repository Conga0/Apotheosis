<Entity 
	name="$projectile_default" 
	>

	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
			gravity_y="0"
			air_friction="1"
			mass="0.8"
			>
		</VelocityComponent> 
	</Base>

  <GhostComponent 
    _enabled="1" 
    hunt_box_radius="412" 
    new_hunt_target_check_every="150" 
    speed="60" 
    velocity.x="-0.37877" 
    velocity.y="-0.307411"
    target_tag="prey"
    die_if_no_home="0"
    >
  </GhostComponent>
	
	<GenomeDataComponent
		herd_id="ghost"
		>
	</GenomeDataComponent>

	<ProjectileComponent 
		_enabled="1" 
		lob_min="0.8"
		lob_max="1.0"
		speed_min="10"
		speed_max="10"
		die_on_low_velocity="0"
		on_death_explode="1"
		on_death_gfx_leave_sprite="0" 
		on_lifetime_out_explode="1"
		explosion_dont_damage_shooter="1"
		damage="0.8"
		on_collision_die="1"
		lifetime="1200" 
		knockback_force="0.5"
		>
		<config_explosion
			never_cache="1" 
			camera_shake="0" 
			explosion_radius="16" 
			explosion_sprite="data/particles/explosion_016_plasma_pink.xml" 
			explosion_sprite_lifetime="0.0" 
			create_cell_probability="0" 
			create_cell_material="" 
			explosion_sprite_emissive="1"
			explosion_sprite_additive="1"
			ray_energy="10000"
			hole_destroy_liquid="1" 
			hole_enabled="1" 
			hole_image="" 
			particle_effect="0" 
			damage_mortals="0"
			physics_explosion_power.min="0.2"
			physics_explosion_power.max="0.3" 
			physics_throw_enabled="1" 
			shake_vegetation="1" 
			sparks_enabled="0" 
			sparks_count_max="0" 
			sparks_count_min="0"
			light_fade_time="0.01" 
			stains_enabled="0" 
			stains_image="data/temp/explosion_stain.png"
			audio_event_name="explosions/magic_small" >
		</config_explosion>
	</ProjectileComponent>

    <LifetimeComponent
    	lifetime="1200"
    >
	</LifetimeComponent>
	
	<SpriteComponent 
		_enabled="1" 
		alpha="1" 
		image_file="data/projectiles_gfx/orb_pink_big.xml" 
		next_rect_animation="" 
		offset_x="8" 
		offset_y="8" 
		rect_animation="fireball" 
		emissive="1"
		additive="1"
		update_transform_rotation="0"
		>
	</SpriteComponent>

	<ParticleEmitterComponent 
		emitted_material_name="plasma_fading_pink"
		delay_frames="0"
		offset.x="0"
		offset.y="0"
		gravity.y="0"
		x_vel_min="-0"
		x_vel_max="0"
		y_vel_min="-0"
		y_vel_max="0"
		friction="2"
		count_min="1"
		count_max="16"
		lifetime_min="0.5"
		lifetime_max="2"
		create_real_particles="0"
		render_on_grid="1"
		is_trail="0"
		trail_gap="1"
		area_circle_radius.min="0"
		area_circle_radius.max="4"
		area_circle_sector_degrees="360"
		velocity_always_away_from_center="20"
		airflow_force="0.9"
		airflow_time="0.01"
		airflow_scale="0.02"
		emit_cosmetic_particles="1"
		emission_interval_min_frames="1"
		emission_interval_max_frames="6"
		fade_based_on_lifetime="1"
		>
	</ParticleEmitterComponent>
	
	<LightComponent 
		radius="150" 
		r="150"
		g="35"
		b="120">
	</LightComponent>

	<AudioComponent
		file="data/audio/Desktop/projectiles.bank"
		event_root="projectiles/orb_b" >
	</AudioComponent>
	
	<AudioLoopComponent
		file="data/audio/Desktop/projectiles.bank"
		event_name="projectiles/magic_big_passby"
		auto_play="1">
	</AudioLoopComponent>
  
	<VariableStorageComponent
		name="projectile_file"
		value_string="mods/apotheosis/files/entities/projectiles/orbspawner_homing.xml"
		>
	</VariableStorageComponent>

</Entity>