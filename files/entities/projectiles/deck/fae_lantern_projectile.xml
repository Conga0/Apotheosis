<Entity 
	name="$projectile_default" 
	>

	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
			gravity_y="0"
			air_friction="0"
			mass="0.05"
			>
		</VelocityComponent> 
	</Base>
	
	<HomingComponent
		homing_targeting_coeff="7"
		detect_distance="350"
		homing_velocity_multiplier="0.99"
		>
	</HomingComponent>

	<ProjectileComponent 
		_enabled="1" 
		lob_min="0.8"
		lob_max="1.0"
		speed_min="50"
		speed_max="75"
		die_on_low_velocity="0"
		on_death_explode="1"
		on_death_gfx_leave_sprite="0" 
		on_lifetime_out_explode="1"
		explosion_dont_damage_shooter="1"
		damage="0.4"
		on_collision_die="1"
		lifetime="100" 
		knockback_force="1.0"
		>
		<damage_by_type
			fire="0.4"
			>
		</damage_by_type>
		<config_explosion
		never_cache="0" 
		camera_shake="4" 
		explosion_radius="6"
		explosion_sprite="data/particles/explosion_016.xml" 
		explosion_sprite_lifetime="0" 
		create_cell_probability="100" 
		hole_destroy_liquid="0"
		explosion_sprite_emissive="1"
		explosion_sprite_additive="1"
		hole_enabled="1" 
		ray_energy="10000"
		damage="0"
		particle_effect="0"
		damage_mortals="1"
		physics_explosion_power.min="0.18"   
		physics_explosion_power.max="0.2"
		physics_throw_enabled="1"
		shake_vegetation="1" 
		sparks_count_min="4" 
		sparks_count_max="10" 
		sparks_enabled="1" 
		stains_enabled="1"
		stains_radius="12" >
		</config_explosion>
	</ProjectileComponent>
	
	<ParticleEmitterComponent 
	emitted_material_name="fire"
	count_min="1"
	count_max="4"
	offset.x="0"
	offset.y="0"
	x_pos_offset_min="-2"
	y_pos_offset_min="-2"
	x_pos_offset_max="2"
	y_pos_offset_max="2"
	x_vel_min="-10"
	x_vel_max="10"
	y_vel_min="-10"
	y_vel_max="10"
	count_min="5"
	count_max="5"
	lifetime_min="0.4"
	lifetime_max="1.0"
	create_real_particles="1"
	emit_cosmetic_particles="0"
	emission_interval_min_frames="2"
	emission_interval_max_frames="3"
	is_emitting="1" >
	</ParticleEmitterComponent>

	<ParticleEmitterComponent 
	emitted_material_name="fire"
	custom_style="FIRE"
	count_min="1"
	count_max="4"
	offset.x="0"
	offset.y="0"
	x_pos_offset_min="-2"
	y_pos_offset_min="-2"
	x_pos_offset_max="2"
	y_pos_offset_max="2"
	x_vel_min="-10"
	x_vel_max="10"
	y_vel_min="-10"
	y_vel_max="10"
	count_min="5"
	count_max="5"
	lifetime_min="0.4"
	lifetime_max="1.0"
	create_real_particles="1"
	emit_cosmetic_particles="0"
	emission_interval_min_frames="1"
	emission_interval_max_frames="2"
	is_emitting="1" >
	</ParticleEmitterComponent>

	<SpriteComponent 
		alpha="0.8" 
		never_ragdollify_on_death="1"
		image_file="mods/Apotheosis/files/enemies_gfx/whisp_emissive.xml"
		offset_x="4"
		offset_y="4"
		update_transform_rotation="0"
		emissive="1"
		additive="1"
		>
	</SpriteComponent>

	<LightComponent 
		_enabled="1" 
		radius="100" 
		r="233"
		g="227"
		b="68"
		fade_out_time="1.5"
		>
	</LightComponent>
		
	<SpriteComponent 
		alpha="0.55"
		image_file="data/particles/fog_of_war_hole_64.xml"
		smooth_filtering="1"
		fog_of_war_hole="1"
		update_transform_rotation="0"
		>
	</SpriteComponent>

	<AudioComponent
		file="data/audio/Desktop/projectiles.bank"
		event_root="projectiles/bullet_fire_small" >
	</AudioComponent>

	<VariableStorageComponent
		name="projectile_file"
		value_string="mods/Apotheosis/files/entities/projectiles/deck/fae_lantern_projectile.xml"
		>
	</VariableStorageComponent>
</Entity>