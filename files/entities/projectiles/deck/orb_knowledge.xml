		penetrate_entities="1"
		damage="0.04"
		velocity_sets_scale="1"
		on_collision_die="0"
		lifetime="350"
		ragdoll_fx_on_collision="DISINTEGRATED"
		penetrate_world="1"
		penetrate_world_velocity_coeff="0.05"
		>
		<config_explosion
			never_cache="1" 
			camera_shake="0.5" 
			explosion_radius="0" 
			explosion_sprite="" 
			explosion_sprite_lifetime="0.0" 
			ray_energy="10000"
			hole_destroy_liquid="1" 
			hole_enabled="1" 
