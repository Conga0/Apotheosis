<Entity 
  name="$projectile_default" tags="projectile_player"
   >

	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
			gravity_y="0"
			air_friction="2.8"
			mass="0.85"
			>
		</VelocityComponent>
	</Base>
	
	<HomingComponent
		homing_targeting_coeff="7"
		detect_distance="50"
		homing_velocity_multiplier="1.0"
		>
	</HomingComponent>

  <ProjectileComponent 
    _enabled="1" 
    lob_min="0.5"
    lob_max="0.7"
    speed_min="75"
    speed_max="125"
    friction="1"
    direction_random_rad="0.0"
    on_death_explode="1"
    on_death_gfx_leave_sprite="0" 
    on_lifetime_out_explode="1"
    explosion_dont_damage_shooter="0"
    on_collision_die="1"
	collide_with_entities="1"
    lifetime="1000"
    damage="0.0"
    lifetime_randomness="0"
    ragdoll_force_multiplier="0"
    hit_particle_force_multiplier="0.1"
    create_shell_casing="0"
    muzzle_flash_file=""
    shoot_light_flash_radius="0"
    bounces_left="0"
    velocity_sets_scale="0"
    velocity_sets_rotation="0"
	knockback_force="1.0"
	physics_impulse_coeff="500"
    spawn_entity="mods/Apotheosis/files/entities/projectiles/mist_water.xml"
    >
    <config_explosion
      never_cache="1" 
      camera_shake="25.0" 
      explosion_radius="30" 
      explosion_sprite="data/particles/explosion_040_poof.xml"
      load_this_entity="data/entities/particles/particle_explosion/main.xml"
      explosion_sprite_lifetime="0" 
      create_cell_probability="40" 
      create_cell_material="water_fading" 
      ray_energy="280000"
      hole_destroy_liquid="0" 
      damage="4"
      hole_enabled="1" 
      hole_image="data/temp/explosion_hole.png" 
      particle_effect="1" 
      damage_mortals="1" 
      physics_explosion_power.min="2.3"
      physics_explosion_power.max="3.6" 
      physics_throw_enabled="1" 
      shake_vegetation="1" 
      sparks_enabled="0"
      material_sparks_enabled="1"
      material_sparks_count_max="70"
      material_sparks_count_min="100" 
	    spark_material="apotheosis_water_fading_fast"
      light_fade_time="1.2" 
      light_r="255"
      light_g="20"
      light_b="20"
      stains_enabled="1" 
      stains_image="data/temp/explosion_stain.png" 
      audio_event_name="explosions/magic_grenade_small" >
    </config_explosion>
  </ProjectileComponent>

  <LightComponent 
    _enabled="1" 
    radius="150" 
    r="255"
    g="50"
    b="50">
  </LightComponent>
  
  <SpriteComponent 
    _enabled="1" 
    alpha="0.8" 
    image_file="mods/Apotheosis/files/projectiles_gfx/aquamine.xml" 
    next_rect_animation=""
    rect_animation=""
    offset_x="10"
    offset_y="10"
	has_special_scale="1"
	special_scale_x="1"
	special_scale_y="1"
     >
  </SpriteComponent>
  
  <ParticleEmitterComponent 
		emitted_material_name="apotheosis_water_fading_fast"
		offset.x="0"
		offset.y="0"
		x_pos_offset_min="-8"
		x_pos_offset_max="8"
		y_pos_offset_min="-8"
		y_pos_offset_max="8"
		x_vel_min="0"
		x_vel_max="0"
		y_vel_min="-1"
		y_vel_max="2"
		gravity.y="0.0"
		count_min="1"
		count_max="3"
		lifetime_min="1.3"
		lifetime_max="3.5"
		render_on_grid="1"
		fade_based_on_lifetime="1"
		airflow_force="1.1"
		airflow_time="0.901"
		airflow_scale="0.1833"
		emission_interval_min_frames="1"
		emission_interval_max_frames="5"
		emit_cosmetic_particles="0"
		create_real_particles="1"
		is_emitting="1"
    >
	</ParticleEmitterComponent>
  
  <ParticleEmitterComponent 
		emitted_material_name="water"
		offset.x="0"
		offset.y="0"
		x_pos_offset_min="-8"
		x_pos_offset_max="8"
		y_pos_offset_min="-8"
		y_pos_offset_max="8"
		x_vel_min="-2"
		x_vel_max="2"
		y_vel_min="-2"
		y_vel_max="2"
		gravity.y="0.0"
		count_min="40"
		count_max="60"
		lifetime_min="1.3"
		lifetime_max="3.5"
		render_on_grid="1"
		fade_based_on_lifetime="1"
		airflow_force="1.1"
		airflow_time="0.901"
		airflow_scale="0.1833"
		emission_interval_min_frames="30"
		emission_interval_max_frames="60"
		emit_cosmetic_particles="1"
		create_real_particles="0"
		is_emitting="1"
    >
	</ParticleEmitterComponent>

  <SpriteParticleEmitterComponent
    sprite_file="mods/Apotheosis/files/particles/bubble.xml"
    delay="0"
    lifetime="30"
    color.r="1" color.g="1" color.b="1" color.a="1"
    color_change.r="0" color_change.g="0" color_change.b="0" color_change.a="-1"
    velocity.x="0" velocity.y="0"
    gravity.x="0" gravity.y="30"
    velocity_slowdown="0"
    rotation="0"
    angular_velocity="0"
    use_velocity_as_rotation="0"
    scale.x="1" scale.y="1"
    scale_velocity.x="0" scale_velocity.y="0"
    emission_interval_min_frames="6"
    emission_interval_max_frames="18"
    count_min="1" count_max="1"
    randomize_rotation.min="-3.1415"
    randomize_rotation.max="3.1415"
	randomize_angular_velocity.min="-15"
	randomize_angular_velocity.max="15"
	randomize_velocity.min_x="-5"
	randomize_velocity.max_x="5"
	randomize_velocity.min_y="-30"
	randomize_velocity.max_y="-10"
		randomize_position.min_x="-8"
		randomize_position.max_x="8"
		randomize_position.min_y="-8"
		randomize_position.max_y="6"
    >
  </SpriteParticleEmitterComponent>

	<!-- drops -->
	<SpriteParticleEmitterComponent
		_tags="enabled_in_world,enabled_in_hand"
		sprite_file="data/particles/waterstone_drop.xml"
		delay="0"
		lifetime="0.5"
		color.r="1" color.g="1" color.b="1" color.a="1"
		color_change.r="0" color_change.g="0" color_change.b="0" color_change.a="-0.5"
		render_back="0"
		velocity.x="0" velocity.y="0"
		velocity_always_away_from_center="10"
		gravity.x="0" gravity.y="0"
		velocity_slowdown="0"
		rotation="0"
		angular_velocity="0"
		use_velocity_as_rotation="0"
		scale.x="1" scale.y="1"
		scale_velocity.x="0" scale_velocity.y="0"
		emission_interval_min_frames="2"
		emission_interval_max_frames="4"
		count_min="1" count_max="1"
		randomize_rotation.min="-3.14"
		randomize_rotation.max="3.14"
		randomize_position.min_x="-1.5"
		randomize_position.max_x="1.5"
		randomize_position.min_y="-1.5"
		randomize_position.max_y="1.5"
		>
	</SpriteParticleEmitterComponent>

	<ParticleEmitterComponent 
		emitted_material_name="water_static"
		offset.x="0"
		offset.y="0"
		x_pos_offset_min="0"
		x_pos_offset_max="0"
		y_pos_offset_min="0"
		y_pos_offset_max="0"
		x_vel_min="0"
		x_vel_max="0"
		y_vel_min="-4"
		y_vel_max="-5"
		count_min="1"
		count_max="4"
		emission_interval_min_frames="1"
		emission_interval_max_frames="2"
		image_animation_file="mods/Apotheosis/files/particles/image_emitters/aquamine_emitter.png"
		image_animation_loop="1"
		lifetime_min="0.1"
		lifetime_max="0.2"
		emit_cosmetic_particles="1"
		create_real_particles="0"  >
	</ParticleEmitterComponent>

  <AudioComponent
      file="data/audio/Desktop/projectiles.bank"
      event_root="player_projectiles/bullet_launcher">
  </AudioComponent>
	
	<AudioLoopComponent
		file="data/audio/Desktop/projectiles.bank"
		event_name="projectiles/magic_orb/loop"
		auto_play="1">
	</AudioLoopComponent>

  <AudioComponent
    file="data/audio/Desktop/animals.bank"
    event_root="animals/mine" >
  </AudioComponent>

  <CollisionTriggerComponent
  	width="40"
  	height="40"
  	radius="20"
    required_tag="mortal"
    self_trigger="1"
  	timer_for_destruction="30" >
  </CollisionTriggerComponent>
	
	<LuaComponent
    execute_on_removed="0"
    execute_every_n_frame="-1"
	script_collision_trigger_hit="data/scripts/projectiles/mine_animate.lua"
    remove_after_executed="1">
	</LuaComponent>

	<LuaComponent
		execute_on_removed="0"
		execute_every_n_frame="-1"
		script_damage_received="data/scripts/projectiles/mine_animate.lua"
		remove_after_executed="1">
	</LuaComponent>
	
	<LuaComponent
		execute_on_removed="0"
		execute_every_n_frame="750"
		script_source_file="data/scripts/projectiles/mine_animate_slow.lua"
		remove_after_executed="1">
	</LuaComponent>
  
	<VariableStorageComponent
		name="projectile_file"
		value_string="mods/Apotheosis/files/entities/projectiles/deck/aquamine.xml"
		>
	</VariableStorageComponent>

</Entity>

