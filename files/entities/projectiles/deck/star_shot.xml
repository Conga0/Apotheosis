<Entity
  name="$projectile_default" tags="projectile_player" >

	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
    		gravity_y="10"
			mass="0.07"
			air_friction="0"
			>
    	</VelocityComponent> 
	</Base>

  <ProjectileComponent 
    _enabled="1" 
	lob_min="0.8"
  	lob_max="1.0"
  	speed_min="175"
  	speed_max="175"
    direction_random_rad="0.66"
    die_on_low_velocity="0"
    on_death_explode="1"
    on_death_gfx_leave_sprite="0" 
    on_lifetime_out_explode="1"
	explosion_dont_damage_shooter="1"
	dont_collide_with_tag="monk_hand"
	friendly_fire="1"
    damage="0.4"
	damage_game_effect_entities=""
    velocity_sets_scale="1"
    on_collision_die="0"
    lifetime="120" >

    <config_explosion
      never_cache="1" 
      camera_shake="0.5" 
      explosion_radius="1" 
      explosion_sprite="mods/Apotheosis/files/particles/explosion_008_plasma_yellow.xml" 
      explosion_sprite_lifetime="0.0" 
	  ray_energy="10000"
      hole_destroy_liquid="1" 
      hole_enabled="1" 
	  damage = "0.0"
      hole_image="data/temp/explosion_hole.png"
	  explosion_sprite_emissive="1"
	  explosion_sprite_additive="1"
      particle_effect="0" 
      damage_mortals="1"
	  physics_explosion_power.min="0" 
      physics_explosion_power.max="0"
	  physics_throw_enabled="0"
      shake_vegetation="1"  
      sparks_enabled="0" 
      sparks_count_max="16" 
      sparks_count_min="12"
      light_fade_time="1.2" 
	  light_r="240"
	  light_g="240"
    light_b="240"
      stains_enabled="1" 
      stains_image="data/temp/explosion_stain.png" >
    </config_explosion>
  </ProjectileComponent>
  
  <SpriteComponent 
    _enabled="1" 
    alpha="1" 
    image_file="mods/Apotheosis/files/projectiles_gfx/star_white.xml" 
    next_rect_animation="" 
    offset_x="5" 
    offset_y="5" 
    rect_animation="fireball" 
	emissive="1"
    additive="1"
     
	update_transform_rotation="0"
	>
  </SpriteComponent>
  
  <LightComponent 
    _enabled="1" 
    radius="150" 
    r="240"
    g="240"
    b="240">
  </LightComponent>
	
	<SpriteParticleEmitterComponent
		sprite_file="data/particles/shine_blue.xml"
		delay="0"
		lifetime="20"
		color.r="1" color.g="1" color.b="1" color.a="1"
		color_change.r="0" color_change.g="0" color_change.b="0" color_change.a="-1"
		velocity.x="0" velocity.y="0"
		gravity.x="0" gravity.y="0"
		velocity_slowdown="0"
		rotation="0"
		angular_velocity="0"
		use_velocity_as_rotation="0"
		scale.x="1" scale.y="1"
		scale_velocity.x="0" scale_velocity.y="0"
		emission_interval_min_frames="15"
		emission_interval_max_frames="30"
		count_min="1" count_max="2"
		randomize_rotation.min="-3.1415"
		randomize_rotation.max="3.1415"
		randomize_angular_velocity.min="-15"
		randomize_angular_velocity.max="15"
		randomize_velocity.min_x="-9"
		randomize_velocity.max_x="9"
		randomize_velocity.min_y="-9"
		randomize_velocity.max_y="9"
		randomize_position.min_x="-8"
		randomize_position.max_x="8"
		randomize_position.min_y="-8"
		randomize_position.max_y="8"
		>
  </SpriteParticleEmitterComponent>
	
	<ParticleEmitterComponent 
		emitted_material_name="spark_white"
		fade_based_on_lifetime="1"
		x_pos_offset_min="0"
		x_pos_offset_max="0"
		y_pos_offset_min="0"
		y_pos_offset_max="0"
		x_vel_min="-10"
		x_vel_max="10"
		y_vel_min="-10"
		y_vel_max="10"
		area_circle_radius.min="2"
		area_circle_radius.max="8"
		velocity_always_away_from_center="50"
		gravity.y="0"
		friction="0.1"
		airflow_force="0.9"
		airflow_time="0.101"
		airflow_scale="0.81"
		count_min="2"
		count_max="3"
		lifetime_min="0.1"
		lifetime_max="0.8"
		create_real_particles="0"
		emit_cosmetic_particles="1"
		draw_as_long="1"
		collide_with_grid="0"
		render_on_grid="1"
		emission_interval_min_frames="15"
		emission_interval_max_frames="30"
		attractor_force="16"
		render_ultrabright="1"
		is_emitting="1" >
	</ParticleEmitterComponent>

    <LuaComponent
        _enabled="1"
        script_source_file="mods/apotheosis/files/scripts/projectiles/piercing_shot_rebalance_additive_tracker.lua"
        execute_every_n_frame="1"
        remove_after_executed="0"
        >
    </LuaComponent>

	<LuaComponent
		_enabled="1"
		script_source_file="mods/apotheosis/files/scripts/projectiles/piercing_shot_rebalance_additive_3.lua"
		execute_every_n_frame="1"
		remove_after_executed="1"
		>
    </LuaComponent>

	<SpriteComponent 
		alpha="0.55"
		image_file="data/particles/fog_of_war_hole_128.xml"
		smooth_filtering="1"
		fog_of_war_hole="1" >
	</SpriteComponent>
  
	<AudioComponent
		file="data/audio/Desktop/projectiles.bank"
		event_root="projectiles/orb_poly" >
	</AudioComponent>
	
	<AudioLoopComponent
		file="data/audio/Desktop/projectiles.bank"
		event_name="projectiles/magic_orb/loop"
		auto_play="1">
	</AudioLoopComponent>
	
	<VariableStorageComponent
		name="projectile_file"
		value_string="mods/Apotheosis/files/entities/projectiles/deck/star_shot.xml"
		>
	</VariableStorageComponent>
</Entity>