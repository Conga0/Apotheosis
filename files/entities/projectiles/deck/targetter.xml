<Entity name="$projectile_default" tags="projectile_player" >

	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
			gravity_y="0"
			air_friction="-2"
			mass="0.05"
			>
		</VelocityComponent> 
	</Base>
	
	<HomingComponent
		homing_targeting_coeff="15.0"
		homing_velocity_multiplier="0.99"
		detect_distance="60"
	>
	</HomingComponent>

	<ProjectileComponent 
		_enabled="1" 
		lob_min="0.8"
		lob_max="1.0"
		speed_min="350"
		speed_max="350"
		die_on_low_velocity="0"
		on_death_explode="0"
		on_death_gfx_leave_sprite="0" 
		on_lifetime_out_explode="0"
		explosion_dont_damage_shooter="1"
		damage="0"
		on_collision_die="1"
		lifetime="100" 
		knockback_force="1.0"
		muzzle_flash_file="data/entities/particles/muzzle_flashes/apotheosis/muzzle_flash_magic_launcher_red.xml"
		shoot_light_flash_r="235"
		shoot_light_flash_g="70"
		shoot_light_flash_b="70"
		shoot_light_flash_radius="100" 
		>
		<config_explosion
			never_cache="1" 
			camera_shake="0"
			damage="0"
			audio_enabled="0" >
		</config_explosion>
	</ProjectileComponent>

  <AudioComponent
      file="data/audio/Desktop/projectiles.bank"
      event_root="projectiles/laser">
  </AudioComponent>
  
  <ParticleEmitterComponent 
		emitted_material_name="spark_red"
		offset.x="0"
		offset.y="0"
		x_pos_offset_min="-3"
		x_pos_offset_max="3"
		y_pos_offset_min="-1"
		y_pos_offset_max="1"
		gravity.y="0"
		x_vel_min="-2"
		x_vel_max="2"
		y_vel_min="0"
		y_vel_max="0"
		count_min="2"
		count_max="4"
		is_trail="1"
		lifetime_min="0.1"
		lifetime_max="0.2"
		airflow_force="10.5"
		airflow_time="1.401"
		airflow_scale="0.05"
		create_real_particles="0"
		emit_cosmetic_particles="1"
		render_on_grid="1"
		emission_interval_min_frames="1"
		emission_interval_max_frames="2"
		is_emitting="1" >
	</ParticleEmitterComponent>
	
	<ParticleEmitterComponent 
		emitted_material_name="spark_red"
		offset.x="0"
		offset.y="0"
		x_pos_offset_min="-1"
		x_pos_offset_max="1"
		y_pos_offset_min="-2"
		y_pos_offset_max="2"
		gravity.y="0"
		x_vel_min="20"
		x_vel_max="80"
		y_vel_min="0"
		y_vel_max="0"
		count_min="1"
		count_max="4"
		is_trail="1"
		trail_gap="1.2"
		fade_based_on_lifetime="1"
		lifetime_min="0.2"
		lifetime_max="0.6"
		airflow_force="1.5"
		airflow_time="0.401"
		airflow_scale="0.05"
		create_real_particles="0"
		emit_cosmetic_particles="1"
		render_on_grid="1"
		emission_interval_min_frames="1"
		emission_interval_max_frames="2"
		is_emitting="1" >
	</ParticleEmitterComponent>
	
	<LightComponent 
		_enabled="1" 
		radius="150" 
		r="90"
		g="30"
		b="30">
	</LightComponent>
  
	<VariableStorageComponent
		name="projectile_file"
		value_string="mods/Apotheosis/files/entities/projectiles/deck/targetter.xml"
		>
	</VariableStorageComponent>
	
	<HitEffectComponent 
        effect_hit="LOAD_UNIQUE_CHILD_ENTITY"
        value_string="mods/Apotheosis/files/entities/misc/targetter_effect.xml" >
	</HitEffectComponent >
</Entity>