		image_file="mods/Apotheosis/files/enemies_gfx/whisp.xml"
		offset_x="4"
		offset_y="4"
		z_index="1.01"
		update_transform_rotation="0"
		>
	</SpriteComponent>

	<Entity>

		<SpriteComponent 
			alpha="0.8" 
			never_ragdollify_on_death="1"
			image_file="mods/Apotheosis/files/enemies_gfx/whisp_emissive.xml"
			offset_x="4"
			offset_y="4"
			update_transform_rotation="0"
			emissive="1"
			additive="1"
			>
		</SpriteComponent>
		
		<SpriteComponent 
			alpha="0.55"
			image_file="data/particles/fog_of_war_hole_128.xml"
			smooth_filtering="1"
