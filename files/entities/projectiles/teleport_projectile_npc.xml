<Entity name="$projectile_default" >

	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
		  gravity_y="200"
		  air_friction="1.7"
		  mass="0.04"
		  >
		</VelocityComponent>
	</Base>

  <TeleportProjectileComponent
    min_distance_from_wall="4">
  </TeleportProjectileComponent>

  <!-- 3.14 is 360 in direction random rad -->

  <ProjectileComponent 
    _enabled="1" 
    lob_min="0.5"
    lob_max="0.7"
    speed_min="1750"
    speed_max="1850"
    friction="1"
    direction_random_rad="0.66"
    on_death_explode="0"
    on_death_gfx_leave_sprite="0" 
    on_lifetime_out_explode="0"
    explosion_dont_damage_shooter="1"
    on_collision_die="1"
    on_collision_remove_projectile="0"
    lifetime="15"
    damage="0"
    velocity_sets_scale="1"
    lifetime_randomness="2"
    ragdoll_force_multiplier="0.005"
    hit_particle_force_multiplier="0.1"
    create_shell_casing="0"
    muzzle_flash_file=""
    shoot_light_flash_radius="0" 
	shoot_light_flash_r="140"
	shoot_light_flash_g="210"
	shoot_light_flash_b="255">
  </ProjectileComponent>
  
  <SpriteComponent 
    _enabled="1" 
    alpha="1" 
    image_file="" 
    next_rect_animation=""
    rect_animation=""
     >
  </SpriteComponent>

  <AudioComponent
      file="data/audio/Desktop/projectiles.bank"
      event_root="player_projectiles/teleport">
  </AudioComponent>
  
  <ParticleEmitterComponent 
    emitted_material_name="spark_purple"
    offset.x="0"
	gravity.y="0.0"
    offset.y="0"
    count_min="4"
    count_max="6"
	x_pos_offset_min="-3"
    y_pos_offset_min="-3"
    x_pos_offset_max="3"
    y_pos_offset_max="3"
    x_vel_min="0"
    x_vel_max="0"
    y_vel_min="-5"
    y_vel_max="5"
	is_trail="1"
	trail_gap="1.5"
    lifetime_min="0.4"
    lifetime_max="1.8"
	airflow_force="4.1"
	airflow_time="0.101"
	airflow_scale="10.01"
    emit_real_particles="0"
	render_on_grid="1"
	fade_based_on_lifetime="1"
    emit_cosmetic_particles="1"
    emission_interval_min_frames="1"
    emission_interval_max_frames="2"
    is_emitting="1" >
  </ParticleEmitterComponent>
  
  <ParticleEmitterComponent 
    emitted_material_name="spark_purple"
    offset.x="0"
	gravity.y="0.0"
    offset.y="0"
    count_min="70"
    count_max="140"
	x_pos_offset_min="-3"
    y_pos_offset_min="-3"
    x_pos_offset_max="3"
    y_pos_offset_max="3"
    x_vel_min="-10"
    x_vel_max="10"
    y_vel_min="-10"
    y_vel_max="10"
	is_trail="1"
	trail_gap="1.5"
    lifetime_min="0.4"
    lifetime_max="0.6"
	airflow_force="0.1"
	airflow_time="0.101"
	airflow_scale="2.01"
    emit_real_particles="0"
	fade_based_on_lifetime="1"
	airflow_force="4.1"
	airflow_time="1.501"
	airflow_scale="2.01"
	render_on_grid="1"
    emit_cosmetic_particles="1"
    emission_interval_min_frames="1"
    emission_interval_max_frames="1"
    is_emitting="1" >
  </ParticleEmitterComponent>
  
	<SpriteParticleEmitterComponent
		sprite_file="data/particles/shine_03.xml"
		delay="0"
		lifetime="2"
		color.r="1" color.g="1" color.b="1" color.a="1"
		color_change.r="0" color_change.g="0" color_change.b="0" color_change.a="-1"
		velocity.x="0" velocity.y="0"
		gravity.x="0" gravity.y="10"
		velocity_slowdown="0.5"
		rotation="0"
		angular_velocity="0"
		use_velocity_as_rotation="0"
		scale.x="1" scale.y="1"
		scale_velocity.x="0" scale_velocity.y="0"
		emission_interval_min_frames="1"
		emission_interval_max_frames="1"
		count_min="1" count_max="2"
		randomize_rotation.min="-3.1415"
		randomize_rotation.max="3.1415"
		randomize_angular_velocity.min="-1"
		randomize_angular_velocity.max="1"
		randomize_position.min_x="-3"
