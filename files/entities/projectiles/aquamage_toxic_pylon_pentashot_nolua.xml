<Entity name="$projectile_default" >
  
	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
			gravity_y="0"
			mass="0.5"
		  air_friction="0.7"
			>
		</VelocityComponent>
	</Base>

  <ProjectileComponent 
    _enabled="1" 
    lob_min="0.9"
    lob_max="1.0"
    speed_min="250"
    speed_max="280"
    friction="0.6"
    direction_random_rad="0.05"
    on_death_explode="1"
    on_death_gfx_leave_sprite="0" 
    on_lifetime_out_explode="1"
    explosion_dont_damage_shooter="0" 
    on_collision_die="1"
    lifetime="500"
    damage="0.8"
    velocity_sets_scale="1"
    lifetime_randomness="7"
    ragdoll_force_multiplier="0.04"
    hit_particle_force_multiplier="5.5 "
    camera_shake_when_shot="5.0"
	velocity_sets_rotation="1"
    bounces_left="40"
    bounce_at_any_angle="1"
	muzzle_flash_file="data/entities/particles/muzzle_flashes/muzzle_flash_magic_launcher.xml"
    shoot_light_flash_radius="120"
	shoot_light_flash_r="125"
    shoot_light_flash_g="255"
    shoot_light_flash_b="40"
	knockback_force="1.0"
	physics_impulse_coeff="4000"
	>
    <config_explosion
      never_cache="0" 
      camera_shake="10" 
      explosion_radius="20"
      explosion_sprite="data/particles/explosion_032_slime.xml" 
      explosion_sprite_lifetime="0" 
	  load_this_entity="data/entities/particles/particle_explosion/main_swirly_green_giga.xml"
      create_cell_probability="40" 
      hole_destroy_liquid="0"
	  explosion_sprite_additive="1"
      hole_enabled="1" 
      ray_energy="4500000"
      damage="2.0"
      particle_effect="0"
      damage_mortals="1"
	  physics_explosion_power.min="0.4" 
      physics_explosion_power.max="0.65"
	  physics_throw_enabled="1"
      shake_vegetation="1" 
      sparks_count_min="10" 
      sparks_count_max="30" 
	  spark_material="apotheosis_radioactive_liquid_strong"
      sparks_enabled="1" 
      stains_enabled="1"
      stains_radius="12" 
      audio_event_name="explosions/magic_grenade_mid" >
    </config_explosion>
  </ProjectileComponent>
  
  <SpriteComponent 
    _enabled="1" 
    alpha="1" 
    image_file="data/projectiles_gfx/grenade_green.xml" 
    next_rect_animation="" 
    offset_x="4" 
    offset_y="4" 
    rect_animation="" 
	additive="1"
     >
  </SpriteComponent>

	<SpriteParticleEmitterComponent
		sprite_file="mods/Apotheosis/files/particles/bubble.xml"
		delay="0"
		lifetime="30"
		color.r="1" color.g="1" color.b="1" color.a="1"
		color_change.r="0" color_change.g="0" color_change.b="0" color_change.a="-1"
		velocity.x="0" velocity.y="0"
		gravity.x="0" gravity.y="30"
		velocity_slowdown="0"
		rotation="0"
		angular_velocity="0"
		use_velocity_as_rotation="0"
		scale.x="1" scale.y="1"
		scale_velocity.x="0" scale_velocity.y="0"
		emission_interval_min_frames="15"
		emission_interval_max_frames="50"
		count_min="1" count_max="1"
		randomize_rotation.min="-3.1415"
		randomize_rotation.max="3.1415"
		randomize_angular_velocity.min="-15"
		randomize_angular_velocity.max="15"
		randomize_velocity.min_x="-5"
		randomize_velocity.max_x="5"
		randomize_velocity.min_y="-30"
		randomize_velocity.max_y="-10"
		randomize_position.min_x="-4"
		randomize_position.max_x="4"
		randomize_position.min_y="-4"
		randomize_position.max_y="4"
		>
	</SpriteParticleEmitterComponent>
  
  <ParticleEmitterComponent 
    emitted_material_name="apotheosis_radioactive_liquid_strong"
    offset.x="0"
    offset.y="0"
    x_pos_offset_min="-1"
    y_pos_offset_min="-1"
    x_pos_offset_max="1"
    y_pos_offset_max="1"
    x_vel_min="-2"
    x_vel_max="2"
    y_vel_min="-5"
    y_vel_max="0"
    count_min="1"
    count_max="1"
    lifetime_min="0.1"
    lifetime_max="0.4"
    create_real_particles="1"
    emit_cosmetic_particles="0"
    emission_interval_min_frames="1"
    emission_interval_max_frames="3"
    is_emitting="1" >
  </ParticleEmitterComponent>
  
  <ParticleEmitterComponent 
    emitted_material_name="spark_green"
    offset.x="0"
    offset.y="0"
    x_pos_offset_min="-2"
    y_pos_offset_min="-2"
    x_pos_offset_max="2"
    y_pos_offset_max="2"
    x_vel_min="-20"
    x_vel_max="20"
    y_vel_min="-20"
    y_vel_max="20"
    count_min="1"
    count_max="10"
    lifetime_min="1.6"
    lifetime_max="3.9"
    create_real_particles="0"
    emit_cosmetic_particles="1"
	render_on_grid="1"
	gravity.y="20"
	fade_based_on_lifetime="1"
    emission_interval_min_frames="1"
    emission_interval_max_frames="1"
    is_emitting="1" >
  </ParticleEmitterComponent>
  
  <ParticleEmitterComponent 
    emitted_material_name="spark_green"
    offset.x="0"
    offset.y="0"
    count_min="1"
    count_max="8"
    gravity.y="-10"
    lifetime_min="0.5"
    lifetime_max="0.8"
    airflow_force="1.2"
    airflow_time="0.1"
    airflow_scale="0.03"
    is_trail="1"
    trail_gap="0.1"
    render_on_grid="1"
    fade_based_on_lifetime="1"
    create_real_particles="0"
    emit_cosmetic_particles="1"
    emission_interval_min_frames="1"
    emission_interval_max_frames="1"
	x_pos_offset_min="-1"
    y_pos_offset_min="-1"
    x_pos_offset_max="1"
    y_pos_offset_max="1"
    is_emitting="1"
	>
  </ParticleEmitterComponent>

  <!-- drops -->
  <SpriteParticleEmitterComponent
    _tags="enabled_in_world,enabled_in_hand"
    sprite_file="mods/Apotheosis/files/particles/waterstone_drop_green.xml"
    delay="0"
    lifetime="0.5"
    color.r="1" color.g="1" color.b="1" color.a="1"
    color_change.r="0" color_change.g="0" color_change.b="0" color_change.a="-0.5"
    render_back="0"
    velocity.x="0" velocity.y="0"
    velocity_always_away_from_center="10"
    gravity.x="0" gravity.y="0"
    velocity_slowdown="0"
    rotation="0"
    angular_velocity="0"
    use_velocity_as_rotation="0"
    scale.x="1" scale.y="1"
    scale_velocity.x="0" scale_velocity.y="0"
    emission_interval_min_frames="1"
    emission_interval_max_frames="1"
    count_min="1" count_max="1"
    randomize_rotation.min="-3.14"
    randomize_rotation.max="3.14"
    randomize_position.min_x="-30"
    randomize_position.max_x="30"
    randomize_position.min_y="-30"
    randomize_position.max_y="30"
    >
  </SpriteParticleEmitterComponent>
  
  <ParticleEmitterComponent 
    emitted_material_name="apotheosis_radioactive_liquid_strong"
    offset.x="0"
    offset.y="0"
    x_pos_offset_min="-1"
    y_pos_offset_min="-1"
    x_pos_offset_max="1"
    y_pos_offset_max="1"
    x_vel_min="-2"
    x_vel_max="2"
    y_vel_min="-5"
    y_vel_max="0"
    count_min="50"
    count_max="50"
    lifetime_min="0.1"
    lifetime_max="0.4"
    create_real_particles="0"
    emit_cosmetic_particles="1"
    emission_interval_min_frames="1"
    emission_interval_max_frames="3"
		area_circle_radius.min="40"
		area_circle_radius.max="40"
    gravity.y="0"
    is_emitting="1" >
  </ParticleEmitterComponent>

  <AudioComponent
      file="data/audio/Desktop/projectiles.bank"
      event_root="player_projectiles/bullet_launcher">
  </AudioComponent>
  
  <LightComponent 
    _enabled="1" 
    radius="60" 
	r="10"
	g="120"
	b="10">
  </LightComponent>
  
	<VariableStorageComponent
		name="projectile_file"
		value_string="mods/Apotheosis/files/entities/projectiles/aquamage_toxic_pylon.xml"
		>
	</VariableStorageComponent>

	<LuaComponent
		script_source_file="mods/Apotheosis/files/scripts/animals/aquamage_toxic_pylon.lua"
		execute_every_n_frame="5"
		>
	</LuaComponent>

	<LuaComponent
		script_source_file="mods/Apotheosis/files/scripts/animals/aquamage_pylon_audio_toxic.lua"
		execute_every_n_frame="30"
		>
	</LuaComponent>
  
</Entity>

