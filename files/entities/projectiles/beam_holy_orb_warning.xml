<Entity 
  name="$projectile_default" tags="teleportable_NOT,projectile"
   >

	<AudioComponent
		file="data/audio/Desktop/projectiles.bank"
		audio_physics_material="projectile"
		event_root="projectiles/hit" >
	</AudioComponent>

  <ProjectileComponent
    _enabled="1" 
	lob_min="0.8"
  	lob_max="1.0"
  	speed_min="0"
  	speed_max="0"
    die_on_low_velocity="0"
    on_death_explode="1"
    on_death_gfx_leave_sprite="0" 
    on_lifetime_out_explode="1"
	explosion_dont_damage_shooter="1"
    damage="0.0"
    on_collision_die="0"
    lifetime="290"
	die_on_liquid_collision="0"
  dont_collide_with_tag="mortal"
    spawn_entity="mods/Apotheosis/files/entities/projectiles/beam_holy_orb_big.xml"
    >
    <config_explosion
        never_cache="1" 
		damage="0"
		camera_shake="4.5" 
		explosion_radius="9" 
      explosion_sprite="data/particles/explosion_016_plasma_pink.xml" 
		explosion_sprite_emissive="1"
		explosion_sprite_additive="1"
		explosion_sprite_lifetime="0" 
		hole_destroy_liquid="0" 
		hole_enabled="1" 
		hole_image="data/temp/explosion_hole.png" 
		audio_event_name="explosions/tnt"
		particle_effect="0" 
		damage_mortals="1" 
		physics_explosion_power.max="0.2" 
		physics_explosion_power.max="0.4" 
		physics_throw_enabled="1" 
		shake_vegetation="1" 
		sparks_count_max="200" 
		sparks_count_min="180" 
		sparks_enabled="1" 
		spark_material="spark_purple_bright"
		stains_enabled="1" 
		stains_radius="9"
        audio_enabled="1" >
    </config_explosion>
  </ProjectileComponent>
  
  <SpriteComponent 
    _enabled="1" 
    alpha="1" 
    image_file="mods/Apotheosis/files/projectiles_gfx/beam_holy_warning.xml" 
    next_rect_animation="" 
    offset_x="16" 
    offset_y="16" 
	  emissive="1"
    additive="1"
     
	update_transform_rotation="0"
	>
  </SpriteComponent>
  
  <LightComponent 
    _enabled="1" 
    radius="150" 
    r="220"
    g="220"
    b="220">
  </LightComponent>
  
  <ParticleEmitterComponent 
    emitted_material_name="spark_white"
    count_min="29"
    count_max="30"
    offset.x="0"
    offset.y="5"
    x_pos_offset_min="-1"
    y_pos_offset_min="-1"
    x_pos_offset_max="1"
    y_pos_offset_max="1"
    x_vel_min="-150"
    x_vel_max="150"
    y_vel_min="-150"
    y_vel_max="150"
    count_min="50"
    count_max="50"
    lifetime_min="1"
    lifetime_max="3"
    create_real_particles="0"
    emit_cosmetic_particles="1"
    emission_interval_min_frames="5"
    emission_interval_max_frames="8"
    is_emitting="1" >
  </ParticleEmitterComponent>

	<AudioComponent
		file="data/audio/Desktop/projectiles.bank"
		event_root="projectiles/orb_poly" >
	</AudioComponent>
	
	<AudioLoopComponent
		file="data/audio/Desktop/projectiles.bank"
		event_name="projectiles/magic_orb/loop"
		auto_play="1">
	</AudioLoopComponent>
	
	<VariableStorageComponent
		name="projectile_file"
		value_string="mods/Apotheosis/files/entities/projectiles/beam_holy_orb_warning.xml"
		>
	</VariableStorageComponent>
   
   <!--Could loop it?-->
  <LuaComponent 
		_enabled="1" 
		script_source_file="mods/Apotheosis/files/scripts/projectiles/beam_holy_warning_audio.lua" 
    execute_every_n_frame="1"
		remove_after_executed="1">
   </LuaComponent>
   
  <LuaComponent 
		_enabled="1" 
		script_source_file="mods/Apotheosis/files/scripts/projectiles/beam_holy_warning_audio_finish.lua" 
    execute_every_n_frame="-1"
		execute_on_removed="1">
   </LuaComponent>
   
</Entity>