<Entity 
	name="$projectile_default" 
	>

	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
			gravity_y="0"
			air_friction="-2"
			mass="0.05"
			>
		</VelocityComponent> 
	</Base>
	
	<HomingComponent
		homing_targeting_coeff="20.0"
		homing_velocity_multiplier="0.99"
		detect_distance="60"
	>
	</HomingComponent>

	<ProjectileComponent 
		_enabled="1" 
		lob_min="0.8"
		lob_max="1.0"
		speed_min="150"
		speed_max="150"
		die_on_low_velocity="0"
		on_death_explode="1"
		on_death_gfx_leave_sprite="0" 
		on_lifetime_out_explode="1"
		explosion_dont_damage_shooter="1"
		damage="0.2"
		on_collision_die="1"
		lifetime="100" 
		knockback_force="1.0"
		muzzle_flash_file="mods/Apotheosis/files/entities/particles/muzzle_flashes/muzzle_flash_magic_launcher_red.xml"
		shoot_light_flash_r="255"
		shoot_light_flash_g="70"
		shoot_light_flash_b="70"
		shoot_light_flash_radius="100" 
		>
		<damage_by_type
			fire="0.15"
			slice="0.15"
			radioactive="0.15"
			>
		</damage_by_type>
		<config_explosion
		  never_cache="0" 
		  camera_shake="10" 
		  explosion_radius="20"
		  explosion_sprite="data/particles/explosion_016_plasma_red.xml" 
		  explosion_sprite_lifetime="0" 
		  create_cell_probability="0" 
		  hole_destroy_liquid="0" 
		  hole_enabled="1" 
		  ray_energy="25000"
		  damage="0.5"
		  particle_effect="1"
		  damage_mortals="1"
		  physics_explosion_power.min="0.15"
		  physics_explosion_power.max="0.35" 
		  shake_vegetation="1" 
		  sparks_count_min="4" 
		  sparks_count_max="10" 
		  spark_material="spark"
		  sparks_enabled="1" 
		  stains_enabled="1"
		  stains_radius="12"
		  >
		</config_explosion>
	</ProjectileComponent>
	
	<HitEffectComponent 
        effect_hit="LOAD_CHILD_ENTITY"
        value_string="mods/Apotheosis/files/entities/misc/effect_mana_degradation_long.xml" >
	</HitEffectComponent >
	
	<SpriteComponent 
    _enabled="1" 
    alpha="1" 
    image_file="mods/Apotheosis/files/projectiles_gfx/fireball_smaller_red.xml" 
    next_rect_animation="" 
    offset_x="0" 
    offset_y="0" 
    rect_animation="fireball"
	additive="1"
     >
  </SpriteComponent>

  <AudioComponent
      file="data/audio/Desktop/projectiles.bank"
      event_root="projectiles/laser">
  </AudioComponent>
  
  <ParticleEmitterComponent 
		emitted_material_name="spark"
		offset.x="0"
		offset.y="0"
		x_pos_offset_min="-3"
		x_pos_offset_max="3"
		y_pos_offset_min="-1"
		y_pos_offset_max="1"
		gravity.y="0"
		x_vel_min="-2"
		x_vel_max="2"
		y_vel_min="0"
		y_vel_max="0"
		count_min="1"
		count_max="1"
		is_trail="1"
		trail_gap="0.6"
		fade_based_on_lifetime="1"
		lifetime_min="0.1"
		lifetime_max="0.2"
		airflow_force="10.5"
		airflow_time="1.401"
		airflow_scale="0.05"
		create_real_particles="0"
		emit_cosmetic_particles="1"
		render_on_grid="1"
		emission_interval_min_frames="1"
		emission_interval_max_frames="2"
		is_emitting="1" >
	</ParticleEmitterComponent>
	
	<ParticleEmitterComponent 
		emitted_material_name="spark"
		offset.x="0"
		offset.y="0"
		x_pos_offset_min="-1"
		x_pos_offset_max="1"
		y_pos_offset_min="-2"
		y_pos_offset_max="2"
		gravity.y="0"
		x_vel_min="20"
		x_vel_max="80"
		y_vel_min="0"
		y_vel_max="0"
		count_min="1"
		count_max="4"
		is_trail="1"
		trail_gap="1.2"
		fade_based_on_lifetime="1"
		lifetime_min="0.2"
		lifetime_max="0.6"
		airflow_force="1.5"
		airflow_time="0.401"
		airflow_scale="0.05"
		create_real_particles="0"
		emit_cosmetic_particles="1"
		render_on_grid="1"
		emission_interval_min_frames="1"
		emission_interval_max_frames="2"
		is_emitting="1" >
	</ParticleEmitterComponent>
	
	<LightComponent 
		_enabled="1" 
		radius="150" 
		r="90"
		g="30"
		b="30">
	</LightComponent>
	
	<VariableStorageComponent
		name="projectile_file"
		value_string="mods/Apotheosis/files/entities/projectiles/basebot_speedershot.xml"
		>
	</VariableStorageComponent>
</Entity>