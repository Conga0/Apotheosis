<Entity tags="hittable" name="$projectile_default">

	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
    		gravity_y="0"
			mass="0.07"
			air_friction="0"
			>
    	</VelocityComponent> 
	</Base>
	
	<HomingComponent
		homing_targeting_coeff="4.0"
		homing_velocity_multiplier="1"
		detect_distance="0"
		target_tag="prey"
		>
	</HomingComponent>

  <ProjectileComponent 
    _enabled="1" 
	speed_min="30"
	speed_max="40"
    on_death_explode="1"
    on_death_gfx_leave_sprite="0" 
    on_lifetime_out_explode="1"
    on_collision_die="1"
    die_on_low_velocity="0"
	damage="1.5"
    lifetime="330" 
	knockback_force="2.0"
  direction_random_rad="6.00"
	>
    <config_explosion
        never_cache="1" 
		damage="0"
		camera_shake="4.5" 
		explosion_radius="9" 
		explosion_sprite="mods/apotheosis/files/particles/explosion_032_plasma_red.xml"
		explosion_sprite_emissive="1"
		explosion_sprite_additive="1"
		explosion_sprite_lifetime="0" 
		create_cell_material="apotheosis_blood_infectious"
		create_cell_probability="40"  
		hole_destroy_liquid="0" 
		hole_enabled="1" 
		hole_image="data/temp/explosion_hole.png" 
		audio_event_name="explosions/tnt"
		particle_effect="0" 
		damage_mortals="1" 
		physics_explosion_power.max="0.2" 
		physics_explosion_power.max="0.4" 
		physics_throw_enabled="1" 
		shake_vegetation="1" 
		sparks_count_max="20" 
		sparks_count_min="7" 
		sparks_enabled="0" 
		stains_enabled="1" 
		stains_radius="9"
        audio_enabled="1" >
    </config_explosion>
  </ProjectileComponent>
  
  <SpriteComponent 
    _enabled="1" 
    alpha="1" 
    image_file="mods/Apotheosis/files/projectiles_gfx/bloodshot.xml" 
    next_rect_animation="" 
    offset_x="0" 
    offset_y="0" 
    rect_animation=""
	emissive="1"
	additive="1"
     
     >
  </SpriteComponent>

  <ParticleEmitterComponent 
    emitted_material_name="apotheosis_blood_infectious"
    count_min="1"
    count_max="2"
    offset.x="0"
    offset.y="5"
    x_pos_offset_min="-1"
    y_pos_offset_min="-1"
    x_pos_offset_max="1"
    y_pos_offset_max="1"
    x_vel_min="-50"
    x_vel_max="50"
    y_vel_min="-50"
    y_vel_max="50"
    count_min="5"
    count_max="5"
    lifetime_min="0.1"
    lifetime_max="0.3"
    create_real_particles="1"
    emit_cosmetic_particles="0"
    emission_interval_min_frames="5"
    emission_interval_max_frames="8"
    is_emitting="1" >
  </ParticleEmitterComponent>

    <HitboxComponent 
        _enabled="1" 
        aabb_min_x="-5" 
        aabb_max_x="5" 
        aabb_min_y="-5" 
        aabb_max_y="5" >
    </HitboxComponent>

    <DamageModelComponent 
        _enabled="1" 
        hp="0.6"
        fire_probability_of_ignition="0" 
        falling_damages="0" 
        air_needed="0" 
        materials_damage="0"
        ragdoll_filenames_file=""
        blood_material="apotheosis_blood_infectious"
        blood_multiplier="0"
        create_ragdoll="0" >
    </DamageModelComponent>
	
	<AudioComponent
		file="data/audio/Desktop/projectiles.bank"
		event_root="projectiles/bullet_fire_heavy"
		>
	</AudioComponent>
	
	<VariableStorageComponent
		name="projectile_file"
		value_string="mods/Apotheosis/files/entities/projectiles/bloodshot_BoC.xml"
		>
	</VariableStorageComponent>
	
	<LuaComponent
		script_source_file="mods/Apotheosis/files/scripts/projectiles/lavashot_BoC.lua"
		execute_every_n_frame="30"
		execute_times="1"
		>
	</LuaComponent>
	
	<LuaComponent
		script_source_file="mods/Apotheosis/files/scripts/projectiles/lavashot_BoC_2.lua"
		execute_every_n_frame="60"
		execute_times="1"
		>
	</LuaComponent>

</Entity>

